<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="NormalTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="SubtitleTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="TitleTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="BaseGrayTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="NormalGrayTextStyle" parent="BaseGrayTextStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="SubtitleGrayTextStyle" parent="BaseGrayTextStyle">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="TitleTextGrayStyle" parent="BaseGrayTextStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
</resources>